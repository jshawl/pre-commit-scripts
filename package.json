{
  "name": "@jshawl/pre-commit",
  "version": "0.0.3",
  "description": "Pre-commit hook for npm projects",
  "main": "dist/index.js",
  "files": [
    "post-install.sh",
    "post-uninstall.sh",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "postinstall": "./post-install.sh",
    "postuninstall": "./post-uninstall.sh",
    "prepare": "rm -rf dist/ && npm run build",
    "build": "tsc --build tsconfig.json",
    "test": "jest",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "lint": "eslint src/"
  },
  "repository": {
    "type": "git",
    "url": "https://git.sr.ht/~jshawl/pre-commit"
  },
  "keywords": [],
  "author": "Jesse Shawl",
  "license": "GPL-3.0-only",
  "dependencies": {
    "ora": "^4.0.4"
  },
  "devDependencies": {
    "@types/babel-core": "^6.25.6",
    "@types/node": "^14.0.5",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "eslint": "^7.1.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.3"
  }
}
